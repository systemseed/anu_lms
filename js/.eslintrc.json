{
  "parserOptions": {
    "allowImportExportEverywhere": false,
    "codeFrame": false,
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/strict"
  ],
  "plugins": ["react", "jsx-a11y"],
  "rules": {
    "no-console": ["error", { "allow": ["error"] }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "Drupal": "readonly",
    "drupalSettings": "readonly"
  }
}
